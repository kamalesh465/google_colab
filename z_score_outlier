    {
      "cell_type": "code",
      "source": [
        "import numpy as np\n",
        "\n",
        "# To demonstrate the effect of changing the threshold without altering the original function,\n",
        "# let's define a temporary detection function here.\n",
        "def detect_outliers_with_threshold(data, threshold_value):\n",
        "  temp_outliers = []\n",
        "  mean = np.mean(data)\n",
        "  std = np.std(data)\n",
        "  for i in data:\n",
        "    z_score = (i-mean) / std\n",
        "    if np.abs(z_score) > threshold_value:\n",
        "      temp_outliers.append(i)\n",
        "  return temp_outliers\n",
        "\n",
        "print(f\"--- Outliers with current dataset and threshold ---\")\n",
        "print(f\"Current outliers with threshold=1: {outlier_pt}\\n\")\n",
        "\n",
        "# Demonstrate with a higher threshold (e.g., 2)\n",
        "higher_threshold = 2\n",
        "outliers_higher = detect_outliers_with_threshold(dataset, higher_threshold)\n",
        "print(f\"Outliers with a higher threshold={higher_threshold}: {outliers_higher}\")\n",
        "print(f\"  (Fewer outliers are detected as points need to be further from the mean.)\\n\")\n",
        "\n",
        "# Demonstrate with a lower threshold (e.g., 0.5)\n",
        "lower_threshold = 0.5\n",
        "outliers_lower = detect_outliers_with_threshold(dataset, lower_threshold)\n",
        "print(f\"Outliers with a lower threshold={lower_threshold}: {outliers_lower}\")\n",
        "print(f\"  (More outliers are detected as points can be closer to the mean.)\")"
      ],
